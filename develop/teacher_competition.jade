doctype
html

   include assets/jade/static/__head
   +title( 'Конкурс педагогов | IT-cube')

   body
      include assets/jade/static/metrika
      #container_competition
         #black_back
         include assets/jade/header/__header
         +menu( '', '', '', '', '', '', '', 'active', '', '', '' )
         include assets/jade/header/main-pages

         include assets/jade/content/teacher_competition/top

         section( aria-label='О конкурсе' )#about.about_competition__container
            .wrapper
               h1.caption.mb4.center
                  span О&nbsp;конкурсе
               .about_competition__holder
                  h2.title.mb4 Цели конкурса
                  include assets/jade/content/teacher_competition/__about
                  +about-item( 'Повышение престижа профессии &laquo;Педагог дополнительного образования&raquo;' )
                  +about-item( 'Выявление талантливых педагогов' )
                  +about-item( 'Создание эффективных условий, обеспечивающих непрерывное профессиональное развитие' )
                  +about-item( 'Кооперация знаний' )
                  +about-item( 'Развитие новых форм наставничества в&nbsp;сфере дополнительного образования детей' )
               .about_competition
                  .about_competition_icon

         section( aria-label='Какие задачи преследует этот конкурс' )#task.competition_task__container.mt8
            .wrapper
               h1.title.mb4 Задачи конкурса
               .row
                  include assets/jade/content/teacher_competition/__task
                  +task( '01', 'Совершенствование профессионального мастерства педагогов дополнительного образования' )
                  +task( '02', 'Повышение общественного и&nbsp;профессионального статуса педагогов дополнительного образования' )
                  +task( '03', 'Выявление лучших педагогических практик и&nbsp;образовательных технологий в&nbsp;сфере дополнительного образования' )
                  +task( '04', 'Консолидация сообщества педагогов Центров &laquo;IT-куб&raquo;' )
                  +task( '05', 'Обобщение и&nbsp;трансляция опыта педагогов' )

         section( aria-label='Этапы проведения"' )#stages.competition_stage__container.mt7
            .wrapper
               h1.caption.center.mb7 Этапы проведения
               .competition_stage__block
                  .competition_stage__row-top
                     .competition_stage__icon.stage_icon-1
                     .stage-arrow
                     .competition_stage__arrow
                        object( type="image/svg+xml", data="assets/data/teacher_competition/animate/arrow-1.svg" )
                           img( src='./assets/data/teacher_competition/icons/icon-stage-arrow-adapt.svg' )

                     .competition_stage__icon.stage_icon-2
                     .stage-arrow
                     .competition_stage__arrow
                        object( type="image/svg+xml", data="assets/data/teacher_competition/animate/arrow-2.svg" )
                           img( src='./assets/data/teacher_competition/icons/icon-stage-arrow-adapt.svg' )
                     .competition_stage__icon.stage_icon-3
                  .competition_stage__row-bottom
                     .competition_stage__holder.text-22
                        .competition_stage__about
                           .competition_stage__title
                              h2.title.mb15 Отборочный этап
                           .competition_stage__phase Прием заявок на&nbsp;конкурс
                           .competition_stage__text.mb1 до 1&nbsp;июня 2024&nbsp;года (включительно)
                           .competition_stage__phase Работа конкурсной комиссии
                           .competition_stage__text.mb1 июнь&nbsp;&mdash; август 2024&nbsp;года
                           .competition_stage__phase Объявление полуфиналистов
                           .competition_stage__text.mb1 10&nbsp;сентября 2024&nbsp;года

                     .competition_stage__holder.text-22
                        .competition_stage__about
                           .competition_stage__title
                              h2.title.mb15 Подготовительный этап
                           .competition_stage__phase Подготовка презентационных материалов финалистами
                           .competition_stage__text.mb1 сентябрь&nbsp;&mdash; октябрь 2024&nbsp;года

                     .competition_stage__holder.text-22
                        .competition_stage__about
                           .competition_stage__title
                              h2.title.mb15 Заключительный этап
                           .competition_stage__phase Финал Конкурса
                           .competition_stage__text.mb-10 15&nbsp;ноября 2024&nbsp;года
                           .competition_stage__phase Публичная презентация дополнительной общеобразовательной программы педагогов Центров &laquo;IT-куб&raquo;






         section( aria-label='Номинации"' )#nominations.nominations__container.mt8
            .wrapper
               h1.caption.center.mb5 Номинации конкурса
               .row
                  include assets/jade/content/teacher_competition/__nominations
                  include assets/jade/content/teacher_competition/__nominations-more
                  +nomination( '1', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', '<div style="display: inline-block;white-space: nowrap;">Программирование</div>', 'Программирование на&nbsp;Python', 'Программирование на&nbsp;Java', '')
                  +nomination( '2', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Разработка<br>VR/AR-приложений', 'Мобильная разработка', 'Разработка VR/AR-приложений', '')
                  +nomination( '3', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Системное <div class="wwnow ml0">администрирование</div>')
                  +nomination( '4', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Кибергигиена')
                  +nomination( '5', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Алгоритмика<br>и&nbsp;логика')
                  +nomination( '6', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Мобильная разработка')
                  +nomination( '7', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Робототехника', 'Программирование<br>роботов', '', '')
                  +nomination( '8', 'Лучший педагог Центров &laquo;IT-куб&raquo; в&nbsp;направлении', 'Большие данные')


         section( aria-label='Усовия участия' )#terms.competition_terms__container.mt7.mb9
            .wrapper
               h1.caption.center.mb5 Условия участия
               .row
                  .competition_terms__holder.mb9
                     .competition_terms__text.text-22 Для участия в&nbsp;Конкурсе педагогам Центров &laquo;IT-куб&raquo; необходимо
                        strong.mr.ml.inline подать заявку не&nbsp;позднее 31&nbsp;мая 2024&nbsp;года
                        | с&nbsp;указанием номинации в&nbsp;установленный срок на&nbsp;официальную почту Организатора:
                     a( href='mailto:it-cube@ficto.ru' )
                        h2.title.mt1 it-cube@ficto.ru

         section( aria-label='Заявка на участие' ).application__container.mb10
            .wrapper
               h1.title.center.mb5 Заявка на&nbsp;участие включает
               .application__block
                  include assets/jade/content/teacher_competition/__application-main
                  include assets/jade/content/teacher_competition/__application-save
                  include assets/jade/content/teacher_competition/__application-more
                  +application-save( '3', 'Анкета участника' )
                  +application( '1', '&laquo;Медиавизитка&raquo;' )
                  +application( '2', 'Согласие на&nbsp;обработку персональных данных' )
                  +application-more( '4', 'Дополнительная общеобразовательная программа, реализуемая участником конкурса', '(скан утвержденной программы в&nbsp;формате .pdf)' )
                  a( href='./assets/data/teacher_competition/files/Konkurs_pedagogov-2024.zip' download='Конкурс педагогов. Пакет документов для участия.zip').application_save__button
                     .icon__save.mr-10
                     span.application_save__text Скачать пакет документов


         section( aria-label='Квота участие' ).quota__container
            .wrapper
               .row
                  h1.title.mb3.quota__title Квота участия
                  .quota__holder.text-22
                     .quota__text_holder.mb15
                        .icon-blue-point.mr1
                        .quota__text Не более одного педагога&ndash;представителя Центра &laquo;IT-куб&raquo; в&nbsp;каждой номинации
                     .quota__text_holder
                        .icon-blue-point.mr1
                        .quota__text Один педагог может подать заявку только в&nbsp;одну номинацию


         section.wrapper.mb4.mt18
            .video_relative
               .video_ratio
               .iframe_holder
                  iframe(src='https://vk.com/video_ext.php?oid=-193270730&id=456239065&hd=2' width='100%' height='100%' frameborder='0' allowfullscreen)
                     p Твой браузер устарел для отображения элемента iframe


         section( aria-label='Архив выступлений победителей конкурса' )#archive.archive__container
            .wrapper
               a( href='./archive/2023/teacher_competition.html').archive_button__image
                  .video_ratio
                  .iframe_holder
                     .archive__image


         include assets/jade/footer/footer

      include assets/jade/static/script




